{%- if cta_enabled %}

  <div class="c_cta ~~action">
    <div class="l_container --lg">
      <div class="l_flex --justify-between --align-center">
        <div class="l_flex__item --span-12 --md --span-8--lg">
          <h2 class="u_margin-bottom--half">Get in Touch</h2>
          <p class="--lead u_margin-bottom--double u_margin-bottom--none--md">We are always available to assist with any enquiries. You can contact us via email <a href="mailto:{{ contact.email.default }}">{{ contact.email.default }}</a> or phone us on <a href="tel:{{ contact.phone.default.href }}">{{ contact.phone.default.display }}</a></p>
        </div>
        <div class="l_flex__item --span-12 --shrink--md">
          <a href="/contact" class="e_button">Get in Touch</a>
        </div>
      </div>
    </div>
  </div>

{%- endif %}
