<meta property="og:locale" content="en_GB">
<meta property="og:type" content="website">
<meta property="og:title" content="{{ title | default: site.title | append: " - " | append: site.name }}">
<meta property="og:description" content="{{ description | default: site.description }}">
<meta property="og:url" content="{{ site.url }}">
<meta property="og:site_name" content="{{ site.name }}">
<meta property="og:image" content="/_assets/images/social_share.png">
<meta property="og:image:secure_url" content="/_assets/images/social_share.png">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="670">
