<!doctype html>
<html lang="en-GB">
  <head>
    <title>{{ title | default: site.title | append: " - " | append: site.name }}</title>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="{{ description | default: site.description }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% include social-share %}

    <link rel="icon" type="image/png" sizes="16x16" href="/_assets/images/favicon_16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/_assets/images/favicon_32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/_assets/images/favicon_96.png">
    <link rel="stylesheet" href="/_assets/styles/main.css">

    {% include schema %}

    <script type="text/javascript" src="/_assets/scripts/main.js" defer></script>
  </head>
  <body>
    <div class="c_page">

      {{ content | safe }}

    </div>
  </body>
</html>
